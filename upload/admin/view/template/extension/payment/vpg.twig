{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ back }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ save }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input_api">{{ entry_api }}</label>
            <div class="col-sm-10">
              	<input type="text" name="payment_vpg_api" value="{{ API }}" placeholder="{{ entry_api }}" id="input_api" class="form-control" />
				        {% if error_email %}
                  <div class="text-danger">{{ error_email }}</div>
                {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
            	<select name="payment_vpg_status" id="input_status" class="form-select">
					{% if Status %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				</select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-sort_order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_vpg_sort_order" value="{{ Sort_Order }}" placeholder="{{ entry_sort_order }}" id="input_sort_order" class="form-control" />
              {% if error_sort_order %}
              <div class="text-danger">{{ error_sort_order }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-notification"><span data-toggle="tooltip" title="{{ help_notification }}">{{ entry_notification }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_vpg_notification" value="{{ Notification }}" placeholder="{{ entry_notification }}" id="input_notification" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-merchant_image_url"><span data-toggle="tooltip" title="{{ help_merchant_image_url }}">{{ entry_merchant_image_url }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_vpg_merchant_image_url" value="{{ Image_URL }}" placeholder="{{ entry_merchant_image_url }}" id="input_merchant_image_url" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-merchant_message_url"><span data-toggle="tooltip" title="{{ help_merchant_message_url }}">{{ entry_merchant_message_url }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_vpg_merchant_message_url" value="{{ Message_URL }}" placeholder="{{ entry_merchant_message_url }}" id="input_merchant_message_url" class="form-control" />
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-environment">{{ entry_environment}}</label>
            <div class="col-sm-10">
            	 <select name="payment_vpg_environment" id="input_environment" class="form-select">
					{% if Environment == 0 %}
					<option value="0" selected="selected">{{ text_evironment_virtual }}</option>
					<option value="1">{{ text_evironment_uat }}</option>
					<option value="2">{{ text_evironment_prod }}</option>
					{% elseif Environment == 1 %}
					<option value="0">{{ text_evironment_virtual }}</option>
					<option value="1" selected="selected">{{ text_evironment_uat }}</option>
					<option value="2">{{ text_evironment_prod }}</option>
					{% else %}
					<option value="0">{{ text_evironment_virtual }}</option>
					<option value="1">{{ text_evironment_uat }}</option>
					<option value="2" selected="selected">{{ text_evironment_prod }}</option>
					{% endif %}
				</select>
            </div>
          </div>
          <div class="form-group">
		        <label class="col-sm-2 control-label" for="input_test"><span data-toggle="tooltip" title="{{ help_debug }}">{{ entry_debug }}</span></label>
            <div class="col-sm-10">
              <select name="payment_vpg_test" id="input-test" class="form-control">
              	{% if Testing %}
              	<option value="1" selected="selected">{{ text_yes }}</option>
              	<option value="0">{{ text_no }}</option>
              	{% else %}
              	<option value="1">{{ text_yes }}</option>
              	<option value="0" selected="selected">{{ text_no }}</option>
              	{% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 